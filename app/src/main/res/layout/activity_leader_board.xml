<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".LeaderBoard">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/hackerdark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/leaderlist"
            android:layout_width="match_parent"
            android:layout_height="603dp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:textColor="#06FF00"
            android:textSize="40sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/retourmenu"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:background="#A32121"
            android:backgroundTint="#913E3E"
            android:foregroundTint="#4A0303"
            android:text="Retour au menu principal"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
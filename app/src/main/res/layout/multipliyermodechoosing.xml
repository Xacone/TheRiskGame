<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordlayoutmult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/hackreseau" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@mipmap/riskgamelogo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Mode Multijoueur"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/playername"
            android:layout_width="397dp"
            android:layout_height="129dp"
            android:ems="10"
            android:hint="ddd"
            android:inputType="textPersonName"
            android:text="Pseudo"
            android:textAlignment="center"
            android:textColor="#24C300"
            android:textSize="48sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ipaddrtext"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Adresse IP"
            android:textAlignment="center"
            android:textColor="#24C300"
            android:textSize="48sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/joinServerButton"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:backgroundTint="#C97C006F"
            android:text="Rejoindre le serveur"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/createServerButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:backgroundTint="#C9041A6C"
            android:text="CrÃ©er un serveur"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnquitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C9AC0000"
            android:text="Retour au menu"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>